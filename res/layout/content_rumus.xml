<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rumus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.why.sdpproject.RumusActivity"
    tools:showIn="@layout/activity_rumus">

    <TextView
        android:text="Nilai A"
        android:layout_width="58dp"
        android:layout_height="16dp"
        tools:layout_editor_absoluteX="5dp"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/content_rumus"
        android:layout_marginTop="64dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTB"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="Nilai B"
        android:layout_width="58dp"
        android:layout_height="16dp"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/content_rumus"
        app:layout_constraintTop_toBottomOf="@+id/editTA"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTHasil"
        app:layout_constraintLeft_toLeftOf="@+id/content_rumus"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Hasil"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/content_rumus"
        app:layout_constraintTop_toBottomOf="@+id/buttonT"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTA"
        app:layout_constraintLeft_toLeftOf="@+id/content_rumus"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="24dp" />

    <Button
        android:text="Tambah"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/buttonT"
        app:layout_constraintLeft_toLeftOf="@+id/content_rumus"
        app:layout_constraintTop_toBottomOf="@+id/editTB"
        android:layout_marginTop="48dp" />

    <Button
        android:text="Diskon"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/buttonDiskon"
        app:layout_constraintLeft_toRightOf="@+id/buttonT"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editTB"
        android:layout_marginTop="48dp" />
</android.support.constraint.ConstraintLayout>
