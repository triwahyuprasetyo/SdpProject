<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.why.sdpproject.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nilaiA"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="71dp" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="54dp"
        android:inputType="textPersonName"
        android:ems="10"
        tools:layout_editor_absoluteY="82dp"
        android:id="@+id/idNilaiA"
        app:layout_constraintLeft_toLeftOf="@+id/content_main" />

    <TextView
        android:text="@string/nilaiB"
        android:layout_width="60dp"
        android:layout_height="19dp"
        tools:layout_editor_absoluteY="131dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idNilaiB"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:text="@string/tambah"
        android:layout_width="90dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/buttonTambah"
        app:layout_constraintTop_toBottomOf="@+id/idNilaiB"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idHasil"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_main" />

    <Button
        android:text="Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/buttonTambah"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="@+id/buttonTambah" />

    <Button
        android:text="Button"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/button3"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>
